<Window x:Class="WPF_UniformGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UniformGrid"
        mc:Ignorable="d"
        Title="Контейнер компоновки UniformGrid" Height="350" Width="525">
    <Grid>
        <UniformGrid Rows="2" Columns="2">
            <TextBlock Background="Red" Padding="10"  Margin="10">TextBlock 1</TextBlock>
            <TextBlock Background="Green" Padding="10" Margin="10">TextBlock2</TextBlock>
            <TextBlock Background="Blue" Padding="10" Margin="10">TextBlock3</TextBlock>
            <TextBlock Background="Purple" Padding="10" Margin="10">TextBlock4</TextBlock>
        </UniformGrid>
    </Grid>
</Window>
