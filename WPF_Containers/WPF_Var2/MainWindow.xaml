<Window x:Class="WPF_Var2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Var2"
        mc:Ignorable="d"
        Title="Вариант 2" Height="450" Width="800" Background="Aquamarine">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0" 
                Margin="10" Content="Сменить цвет" Click="Button_Click"/>
        <Button Grid.Column="0" Grid.Row="1"
                Margin="10" Content="Сменить цвет" Click="Button_Click_1"/>
        <Rectangle x:Name="rectRed" Grid.Column="1" Grid.Row="0" Margin="10" Fill="Red"/>
        <Rectangle x:Name="rectGreen" Grid.Column="1" Grid.Row="1" Margin="10" Fill="Green"/>
    </Grid>
</Window>
