<Window x:Class="WPF_Var3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Var3"
        mc:Ignorable="d"
        Title="Вариант 3" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Label VerticalContentAlignment="Center" Content="Первый пункт меню" Width="150" Height="40" Margin="5,5,0,5"/>
            <TextBox VerticalContentAlignment="Center" Text="Второй пункт меню" Width="150"  Height="40" Margin="5,5,0,5"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBox x:Name="tbMain" Width="100" Margin="10,10,10,0"/>
            <Button Content="Очистить" Width="100" Margin="10,10,10,0" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
