<Window x:Class="WPFApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApplication"
        mc:Ignorable="d"
        Title="Главное окно" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label  Margin="5" HorizontalAlignment="Center" Foreground="DarkCyan" Content="Введите свое имя"></Label>
            <TextBox x:Name="textBoxName" Margin="5" Width="250" Height="30"></TextBox>
            <Button Margin="5" Width="250" Height="30" Content="Ok" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
