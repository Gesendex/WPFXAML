<Window x:Class="WPF_Var6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Var6"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label x:Name="labelByte" 
                   Content="Введите размер файла в байтах:"/>
            <TextBox x:Name="tbByte" 
                     Width="200" 
                     HorizontalContentAlignment="Center" 
                     Margin="5"/>
            <Button x:Name="bCalculate"
                    Content="Вычислить:"
                    Margin="5" Click="bCalculate_Click"/>
            <TextBlock x:Name="tbAnswer"
                       Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
