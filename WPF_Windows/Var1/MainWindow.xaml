<Window x:Class="Var1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Var1"
        mc:Ignorable="d"
        Title="Var1" Height="200" Width="440">
    <Grid>
        <StackPanel  Margin="10">
            <TextBlock HorizontalAlignment="Center" Text="Выберите действие" Margin="20"/>
            <WrapPanel>
                <Button Width="180" Margin="10" Name="btAverage" Content="Average" Click="btAverage_Click"/>
                <Button Width="180" Margin="10" Name="btSquare" Content="Square" Click="btSquare_Click"/>
                <Button Width="180" Margin="10" Name="btList" Content="List" Click="btList_Click"/>
                <Button Width="180" Margin="10" Name="btFile" Content="File" Click="btFile_Click"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
