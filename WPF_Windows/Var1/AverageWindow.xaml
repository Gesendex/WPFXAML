<Window x:Class="Var1.AverageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Var1"
        mc:Ignorable="d"
        Title="Average" Height="200" Width="430">
    <Grid>
        <StackPanel  Margin="5">
            <TextBlock HorizontalAlignment="Center" Text="Введите значения" Margin="5"/>
            <TextBox Name="tbValue1" Width="180" Margin="5"/>
            <TextBox Name="tbValue2" Width="180" Margin="5"/>
            <Button Width="180" Margin="5" Content="Вычислить" Click="Button_Click"/>
            <TextBlock Name="tbAnswer" HorizontalAlignment="Center" Width="180" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
