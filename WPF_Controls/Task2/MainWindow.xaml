<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Выберите начала" Margin="10,10,10,0"/>
            <DatePicker Name="dpStart" Margin="10,10,10,0"/>
            <TextBlock Text="Укажите срок проекта в днях:" Margin="10,10,10,0"/>
            <TextBox Name="dpDuration" Margin="10,10,10,0"/>
            <TextBlock Text="Укажите дату сдачи проекта" Margin="10,10,10,0"/>
            <DatePicker Name="dpEnd" Margin="10,10,10,0" SelectedDateChanged="dpEnd_SelectedDateChanged"/>
           
        </StackPanel>
    </Grid>
</Window>
