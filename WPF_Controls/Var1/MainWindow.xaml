<Window x:Class="Var1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Var1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
            <ComboBox  Margin="40"/>
        </StackPanel>

        <GroupBox Header="RadioButtons" Grid.Row="0" Grid.Column="0" Margin="10">
            <StackPanel Margin="20">
                <RadioButton>Group 1</RadioButton>
                <RadioButton>Group 1</RadioButton>
                <RadioButton>Group 1</RadioButton>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="CheckBoxes" Grid.Row="1" Grid.Column="0" Margin="10">
            <StackPanel Margin="20">
                <CheckBox>CheckBox 1</CheckBox>
                <CheckBox>CheckBox 2</CheckBox>
                <CheckBox>CheckBox 3</CheckBox>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
