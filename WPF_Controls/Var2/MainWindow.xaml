<Window x:Class="Var2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Var2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Grid.Column="1">
            <MenuItem Header="Пункт 1">
                <MenuItem Header="Подпункт 1"/>
                <MenuItem Header="Подпункт 2"/>
            </MenuItem>
            <MenuItem Header="Пункт 2"/>
            <MenuItem Header="Пункт 3"/>
            <MenuItem Header="Пункт 4"/>
            <MenuItem Header="Пункт 5"/>
        </Menu>
        <Menu Grid.Row ="1">
            <MenuItem Header="Пункт 1"/>
            <MenuItem Header="Пункт 2"/>
            <MenuItem Header="Пункт 3"/>
            <MenuItem Header="Пункт 4"/>
            <MenuItem Header="Пункт 5">
                <MenuItem Header="Подпункт 1"/>
                <MenuItem Header="Подпункт 2"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
